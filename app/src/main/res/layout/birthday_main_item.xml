<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools">


    <androidx.cardview.widget.CardView
        android:id="@+id/main_item_card_main"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/red"
        >

        <ImageView
            android:id="@+id/main_item_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_cancel_24"
            android:layout_gravity="end"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            />

        <TextView
            android:id="@+id/main_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Happy Birthday"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="60dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/main_item_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Luka"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="35sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="70dp"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/main_item_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            tools:src="@drawable/baseline_android_24"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp"
            />


        <TextView
            android:id="@+id/main_item_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="4/15/21, 5:00 AM"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>